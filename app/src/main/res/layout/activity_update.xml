<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UpdateActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_Merek"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:counterEnabled="true"
            app:counterMaxLength="180">
            <EditText
                android:id="@+id/et_Merek"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nama Merek Sepatu"
                android:inputType="none"
                android:maxLength="180"/>
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_Model"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:counterEnabled="true"
            app:counterMaxLength="180"
            android:layout_below="@id/til_Merek">
            <EditText
                android:id="@+id/et_Model"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Model Sepatu"
                android:inputType="none"
                android:maxLength="180"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_Jenis"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:counterEnabled="true"
            app:counterMaxLength="180"
            android:layout_below="@id/til_Model">
            <EditText
                android:id="@+id/et_Jenis"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Jenis Sepatu"
                android:inputType="none"
                android:maxLength="180"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_Warna"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:counterEnabled="true"
            app:counterMaxLength="180"
            android:layout_below="@id/til_Jenis">
            <EditText
                android:id="@+id/et_Warna"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Warna Sepatu"
                android:inputType="none"
                android:maxLength="180"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_Ukuran"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:counterEnabled="true"
            app:counterMaxLength="180"
            android:layout_below="@id/til_Warna">
            <EditText
                android:id="@+id/et_Ukuran"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="UkuranSepatu"
                android:inputType="none"
                android:maxLength="180"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_Jumlah"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:counterEnabled="true"
            app:counterMaxLength="180"
            android:layout_below="@id/til_Ukuran">
            <EditText
                android:id="@+id/et_Jumlah"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Jumlah Sepatu"
                android:inputType="none"
                android:maxLength="180"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_Harga"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:counterEnabled="true"
            app:counterMaxLength="180"
            android:layout_below="@id/til_Jumlah">
            <EditText
                android:id="@+id/et_Harga"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Harga Per Pcs Sepatu"
                android:inputType="none"
                android:maxLength="180"/>
        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/btn_UpdateSepatu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Update"
            android:layout_below="@+id/til_Harga"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="16dp"/>

        <ProgressBar
            android:id="@+id/progress_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btn_UpdateSepatu"
            android:layout_marginTop="8dp"
            android:layout_centerHorizontal="true"
            android:visibility="gone"/>
    </RelativeLayout>

</RelativeLayout>
